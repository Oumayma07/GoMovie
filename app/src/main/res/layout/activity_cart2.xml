<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart2"
    android:background="@color/main_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:id="@+id/back1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/dark_blue"
            android:src="@drawable/baseline_chevron_left_24"/>
        <VideoView
            android:id="@+id/myVideoView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/up2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="The Kings Man"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="The King's Man est un film d'action et d'espionnage sorti en 2021,
  réalisé par Matthew Vaughn.
  Il sert de préquelle à la série Kingsman et raconte la création de l'agence d'espionnage indépendante.
L'intrigue se déroule pendant la Première Guerre mondiale,
où un homme noble, Orlando Oxford, et son fils, Conrad,
tentent d'empêcher un groupe de tyrans et de criminels,
 menés par Rasputin, de plonger le monde dans le chaos.
Avec son mélange de scènes d’action stylisées,
d’humour et de drame historique,
le film explore les origines de l'organisation Kingsman."
            android:textColor="#d9dcde"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/main_color"
                android:src="@drawable/baseline_person_24"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Principal Actors"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/taron"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tatum"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/colin"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hanna"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
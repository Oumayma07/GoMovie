<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carte1"
    android:background="@color/main_color">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/main_color"
            android:src="@drawable/baseline_chevron_left_24"
            android:id="@+id/back1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <VideoView
           android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@id/myVideoView"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Venom"
            android:textColor="@color/yellow"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Venom est un film de super-héros basé sur le personnage de Marvel Comics. Il suit Eddie Brock, un journaliste dont la vie bascule lorsqu'il fusionne avec un symbiote extraterrestre nommé Venom, qui lui confère des pouvoirs incroyables, mais aussi une personnalité sombre et imprévisible. Ensemble, ils doivent apprendre à coexister tout en affrontant des menaces qui mettent en danger la planète. Mélange d'action, de suspense et d'humour noir, le film explore la relation complexe entre l'homme et le symbiote"
            android:textColor="#d9dcde"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/main_color"
                    android:src="@drawable/baseline_person_24"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Principal Actors"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tom"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/rhys"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/juno"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/peggy"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>